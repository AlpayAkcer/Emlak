@model List<AdvertListDto>
@{
    ViewData["Title"] = "InActiveAdvert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İlanlar /</span>Silinen İlan Listesi
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-3">
            @*@{
                    if (!User.IsInRole($"{RoleConsts.User}"))
                    {
                        <a class="btn btn-info mb-3" asp-area="Admin" asp-controller="Article" asp-action="AddArticle">Makale Ekle <i class="bx bx-plus"></i></a>
                    }
                }*@

            <table class="table" id="tableList">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Isıtma</th>
                        <th>Klima</th>
                        <th>Mt2</th>
                        <th>Banyo Sayısı</th>
                        <th>Oda Sayısı</th>
                        <th>Havuz</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr name="@item.AdvertID">
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.FirePlace</td>
                            <td>@item.AirCordinator</td>
                            <td>@item.Area</td>
                            <td>@item.BathOfRoomNumber</td>
                            <td>@item.NumberOfRoom</td>
                            <td>@item.Pool</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm text-white" asp-route-AdvertID="@item.AdvertID" asp-controller="Advert" asp-action="ChangeStatus">
                                    <i class="bx bx-recycle"></i>
                                </a>
                                <a class="btn btn-danger btn-sm text-white" asp-route-AdvertID="@item.AdvertID" asp-controller="Advert" asp-action="DeleteCompleteAdvert">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->

@section Scripts{
    <script src="~/Admin/js/ListTableIndex.js" type="application/ecmascript"></script>
}


