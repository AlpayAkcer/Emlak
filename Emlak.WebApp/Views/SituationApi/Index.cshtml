@model List<Emlak.EntityLayer.Entities.Situation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İlan Durumları /</span> Durum Listesi
    </h4>
    <div class="card">
        <div class="table-responsive text-nowrap m-3">
            <a class="btn btn-primary text-white float-end m-3" href="~/SituationApi/Create">
                Yeni Durum Ekle <i class="bx bx-plus"></i>
            </a>
            <table class="table" id="tableList">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr name="@item.SituationID">
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@item.SituationID" asp-action="Update" asp-controller="SituationApi" asp-route-id="@item.SituationID">
                                    Güncelle
                                </a>

                                <a class="btn btn-danger btn-sm text-white" asp-controller="SituationApi" asp-action="Delete" asp-route-id="@item.SituationID">
                                    Sil
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>