@model Situation
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İlan Durum Yönetimi /</span> Durum Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form method="post">
                    <input type="hidden" asp-for="SituationID" />
                    <a class="btn btn-primary text-white float-end m-3" href="/SituationApi">
                        Durum Listesi <i class="bx bx-plus"></i>
                    </a>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" id="defaultFormControlInput" class="form-label">Başlık</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

